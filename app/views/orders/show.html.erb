<p id="notice"><%= notice %></p>

<div id="order_receipt">

<h3>
  Order: <%= @order.id %>
</h3>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>


<table id="check_out">
  <% @line_items.each do |item| %>
    <tr>
      <% @product = Product.find(item.product_id) %>

      <td><%= item.quantity %>&times;</td>
      <td><%= @product.title %></td>
      <td><%= number_to_currency(item.total_price) %></td>
    </tr>
  <% end %>

  <tr class="total_line">
      <td colspan="2"><strong>Total:</strong></td>
      <td class="total_cell"><strong><%= number_to_currency(@sum) %></strong></td>
  </tr>
</table>

<p>
<%= link_to 'Back', orders_path %>
</p>

</div>
