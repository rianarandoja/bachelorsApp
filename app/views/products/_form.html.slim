= form_for(product) do |f|
  - if product.errors.any?
    #error_explanation
      h2
        = pluralize(product.errors.count, "error")
        |  prohibited this product from being saved:
      ul
        - product.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description, rows: 4, cols: 50
  .field
    = f.label :prod_type
    = f.select :prod_type, Product.prod_types.keys, prompt: 'Select product type'
  .field
    = f.label :price
    = f.text_field :price, size: 13
    |  (â‚¬) 
  .actions
    = f.submit
